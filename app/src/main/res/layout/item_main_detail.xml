<?xml version="1.0" encoding="utf-8"?>
<!--달력에서 날짜 선택했을때 나오는 상세보기 페이지-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/item_boarder"
    android:elevation="10dp"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="23dp"
    android:paddingHorizontal="17dp"
    android:paddingVertical="13dp">

    <TextView
        android:id="@+id/item_main_detail_comm_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_main_detail_total_time_cl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_main_detail_part_list_rv"
        android:text="comm"
        android:textSize="14sp"
        android:textAlignment="textStart"
        android:fontFamily="@font/myanmar_text_bold"
        android:maxLength="10"
        app:layout_constraintHorizontal_weight="4">
    </TextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_main_detail_total_time_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/item_main_detail_comm_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_main_detail_more_iv"
        app:layout_constraintBottom_toTopOf="@id/item_main_detail_total_weight_cl"
        app:layout_constraintHorizontal_weight="10"
        android:background="@drawable/item_boarder"
        android:backgroundTint="#f4f4f4"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="13dp">
    <TextView
        android:id="@+id/item_main_detail_total_time_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="총 시간"
        android:textSize="8sp"
        android:fontFamily="@font/vivald_italic"
        android:textColor="#7a7a7a"
        android:layout_marginLeft="14dp">
    </TextView>
    <TextView
        android:id="@+id/item_main_detail_total_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/bahnschrift"
        android:textSize="14sp"
        android:layout_marginRight="14dp">
    </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_main_detail_total_weight_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_main_detail_total_time_cl"
        app:layout_constraintBottom_toTopOf="@id/item_main_detail_part_list_rv"
        app:layout_constraintRight_toLeftOf="@id/item_main_detail_more_iv"
        app:layout_constraintLeft_toRightOf="@id/item_main_detail_comm_tv"
        app:layout_constraintHorizontal_weight="10"
        android:background="@drawable/item_boarder"
        android:backgroundTint="#f4f4f4"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="13dp">
    <TextView
        android:id="@+id/item_main_detail_total_weight_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="총 볼륨"
        android:textSize="8sp"
        android:fontFamily="@font/vivald_italic"
        android:textColor="#7a7a7a"
        android:layout_marginLeft="14dp">
    </TextView>
    <TextView
        android:id="@+id/item_main_detail_total_weight_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/bahnschrift"
        android:textSize="14sp"
        android:layout_marginRight="14dp">
    </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/item_main_detail_more_iv"
        android:layout_width="13.8dp"
        android:layout_height="13.8dp"
        app:layout_constraintTop_toTopOf="@id/item_main_detail_total_time_cl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/item_main_detail_total_time_cl"
        app:layout_constraintLeft_toRightOf="@id/item_main_detail_total_time_cl"
        android:src="@drawable/item_main_detail_more">
    </ImageView>
    <ImageView
        android:id="@+id/item_main_detail_del_iv"
        android:layout_width="13.8dp"
        android:layout_height="13.8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_main_detail_part_list_rv"
        android:src="@drawable/item_main_detail_del">
    </ImageView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_main_detail_part_list_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_main_detail_total_weight_cl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_main_detail_del_iv"
        app:layout_constraintHorizontal_weight="14"
        android:background="@drawable/item_boarder"
        android:backgroundTint="#f4f4f4"
        android:layout_marginRight="13dp"
        tools:listitem="@layout/item_main_detail_list"
        app:layout_constrainedWidth="true">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>