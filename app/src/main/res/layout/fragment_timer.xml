<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/timer_work_time_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <TextView
            android:id="@+id/timer_total_work_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 운동 시간"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/timer_total_work_time_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/timer_total_work_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            app:layout_constraintTop_toBottomOf="@id/timer_total_work_tv"
            app:layout_constraintStart_toStartOf="@id/timer_total_work_tv"
            app:layout_constraintEnd_toEndOf="@id/timer_total_work_tv"
            android:textSize="20sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/timer_rest_time_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:id="@+id/timer_total_rest_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 운동 시간"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/timer_total_rest_time_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/timer_running_rest_tv"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/timer_total_rest_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            app:layout_constraintTop_toBottomOf="@id/timer_total_rest_tv"
            app:layout_constraintStart_toStartOf="@id/timer_total_rest_tv"
            app:layout_constraintEnd_toEndOf="@id/timer_total_rest_tv"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/timer_running_rest_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진행 시간"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/timer_total_rest_time_tv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="20dp"
            />
        <TextView
            android:id="@+id/timer_running_rest_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/timer_running_rest_tv"
            app:layout_constraintTop_toBottomOf="@id/timer_running_rest_tv"
            app:layout_constraintStart_toStartOf="@id/timer_running_rest_tv"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/rectangle">
        <Button
            android:id="@+id/timer_pick_bt"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/timer_work_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="운동 종류"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timer_pick_bt"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/rectangle"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/timer_rest_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="20dp"
            android:background="@drawable/rounding"
            android:backgroundTint="@color/yellow"
            app:layout_constraintTop_toBottomOf="@id/timer_work_tv"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/timer_rest_img"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/timer_rest_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user"
            app:layout_constraintEnd_toStartOf="@id/timer_rest_setting_time_tv"
            app:layout_constraintStart_toEndOf="@id/timer_rest_time_tv"
            app:layout_constraintTop_toTopOf="@id/timer_rest_time_tv"
            app:layout_constraintBottom_toBottomOf="@id/timer_rest_time_tv"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/timer_rest_setting_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@id/timer_rest_img"
            app:layout_constraintTop_toTopOf="@id/timer_rest_time_tv"
            app:layout_constraintBottom_toBottomOf="@id/timer_rest_time_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/timer_running_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진행 시간"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/timer_running_time_tv"
            app:layout_constraintTop_toBottomOf="@id/timer_work_tv"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/timer_running_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/timer_running_tv"
            app:layout_constraintTop_toTopOf="@id/timer_running_tv"
            app:layout_constraintBottom_toBottomOf="@id/timer_running_tv"
            android:layout_marginEnd="50dp"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/timer_workrest_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쉬는 시간"
            app:layout_constraintTop_toBottomOf="@id/timer_running_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/timer_table_tv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="16sp"
            android:background="@drawable/table_tint"
            app:layout_constraintTop_toBottomOf="@id/timer_workrest_bt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/timer_done_bt"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"/>
        <ImageView
            android:id="@+id/timer_table_bottom_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"/>

        <View
            android:id="@+id/timer_fir_column"
            android:layout_width="1dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="@id/timer_table_tv"
            app:layout_constraintBottom_toBottomOf="@id/timer_table_tv"
            app:layout_constraintStart_toStartOf="@id/timer_table_tv"
            app:layout_constraintEnd_toStartOf="@id/timer_sec_column"/>
        <View
            android:id="@+id/timer_sec_column"
            android:layout_width="1dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="@id/timer_table_tv"
            app:layout_constraintBottom_toBottomOf="@id/timer_table_tv"
            app:layout_constraintStart_toEndOf="@id/timer_fir_column"
            app:layout_constraintEnd_toEndOf="@id/timer_table_tv"/>

        <TextView
            android:id="@+id/timer_table_set_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세트"
            app:layout_constraintTop_toTopOf="@id/timer_table_tv"
            app:layout_constraintStart_toStartOf="@id/timer_table_tv"
            app:layout_constraintEnd_toEndOf="@id/timer_fir_column"
            app:layout_constraintBottom_toTopOf="@id/timer_table_set_et"
            />

        <TextView
            android:id="@+id/timer_table_volume_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="무게"
            app:layout_constraintTop_toTopOf="@id/timer_table_tv"
            app:layout_constraintStart_toStartOf="@id/timer_fir_column"
            app:layout_constraintEnd_toEndOf="@id/timer_sec_column"
            app:layout_constraintBottom_toTopOf="@id/timer_table_volume_et"
            />

        <TextView
            android:id="@+id/timer_table_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="횟수"
            app:layout_constraintTop_toTopOf="@id/timer_table_tv"
            app:layout_constraintStart_toStartOf="@id/timer_sec_column"
            app:layout_constraintEnd_toEndOf="@id/timer_table_tv"
            app:layout_constraintBottom_toTopOf="@id/timer_table_count_et"
            />

        <EditText
            android:id="@+id/timer_table_set_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세트"
            app:layout_constraintBottom_toBottomOf="@id/timer_table_tv"
            app:layout_constraintStart_toStartOf="@id/timer_table_tv"
            app:layout_constraintEnd_toEndOf="@id/timer_fir_column"
            app:layout_constraintTop_toBottomOf="@id/timer_table_set_tv"
            android:background="@android:color/transparent"
            />

        <EditText
            android:id="@+id/timer_table_volume_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="무게"
            app:layout_constraintStart_toStartOf="@id/timer_fir_column"
            app:layout_constraintEnd_toEndOf="@id/timer_sec_column"
            app:layout_constraintBottom_toBottomOf="@id/timer_table_tv"
            app:layout_constraintTop_toBottomOf="@id/timer_table_volume_tv"
            android:background="@android:color/transparent"
            />

        <EditText
            android:id="@+id/timer_table_count_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="횟수"
            app:layout_constraintBottom_toBottomOf="@id/timer_table_tv"
            app:layout_constraintStart_toStartOf="@id/timer_sec_column"
            app:layout_constraintEnd_toEndOf="@id/timer_table_tv"
            app:layout_constraintTop_toBottomOf="@id/timer_table_count_tv"
            android:background="@android:color/transparent"
            />
        <Button
            android:id="@+id/timer_done_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="완료하기"
            android:layout_marginTop="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>