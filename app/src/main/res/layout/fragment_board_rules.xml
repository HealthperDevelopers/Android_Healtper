<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/board_rules_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginStart="-5dp"
        android:background="@drawable/board_writing_background"
        />


    <TextView
        android:id="@+id/board_writing_cancel_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/dialog_edit_work_close"
        android:backgroundTint="#7a7a7a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart = "30dp"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/board_writing_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="커뮤니티 이용수칙"
        style="@style/Text.uljiro.comment"
        android:textColor="#7a7a7a"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/board_writing_cancel_iv"
        app:layout_constraintTop_toTopOf="@id/board_writing_cancel_iv" />




</androidx.constraintlayout.widget.ConstraintLayout>