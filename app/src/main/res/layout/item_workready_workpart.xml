<?xml version="1.0" encoding="utf-8"?>
<!--루틴시작전 준비단계 리스트 아이템-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginEnd="45dp"
    android:layout_marginStart="45dp"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/workready_item_background">
<TextView
    android:id="@+id/item_workready_workpart_part_tv"
    android:layout_width="75dp"
    android:layout_height="50dp"
    android:gravity="center"
    android:layout_marginLeft="10dp"
    android:textSize="14sp"
    android:background="@drawable/rounding"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/item_workready_workpart_time_title_tv"
    android:text="운동부분">
</TextView>
<!--    운동부분-->
    <TextView
        android:id="@+id/item_workready_workpart_time_title_tv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:gravity="left"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toTopOf="@id/item_workready_workpart_part_tv"
        app:layout_constraintLeft_toRightOf="@id/item_workready_workpart_part_tv"
        app:layout_constraintRight_toLeftOf="@id/item_workready_workpart_time_tv"
        android:text="운동시간">
    </TextView>
<!--    운동시간-->
    <TextView
        android:id="@+id/item_workready_workpart_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginEnd="22dp"
        app:layout_constraintLeft_toRightOf="@id/item_workready_workpart_time_title_tv"
        app:layout_constraintRight_toLeftOf="@id/item_workready_workpart_detail_iv"
        app:layout_constraintTop_toTopOf="@id/item_workready_workpart_time_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_workready_workpart_time_title_tv"
        android:text="00 : 00 : 00">
    </TextView>
<!--    운동시간 내용-->
    <TextView
        android:id="@+id/item_workready_workpart_vol_title_tv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:gravity="left"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="@id/item_workready_workpart_part_tv"
        app:layout_constraintRight_toLeftOf="@id/item_workready_workpart_time_title_tv"
        app:layout_constraintLeft_toRightOf="@id/item_workready_workpart_time_title_tv"
        android:text="총    볼륨">
    </TextView>
<!--    총볼륨-->
    <TextView
        android:id="@+id/item_workready_workpart_vol_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/item_workready_workpart_vol_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_workready_workpart_vol_title_tv"
        app:layout_constraintEnd_toEndOf="@+id/item_workready_workpart_time_tv"
        android:text="-- kg">
    </TextView>
<!--    총 볼륨 내용-->
    <ImageView
        android:id="@+id/item_workready_workpart_detail_iv"
        android:layout_width="11dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/item_workready_workpart_time_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="26dp"
        android:src="@drawable/workready_item_plus">
    </ImageView>
<!--    자세히보기-->
</androidx.constraintlayout.widget.ConstraintLayout>