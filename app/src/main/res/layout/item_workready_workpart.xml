<?xml version="1.0" encoding="utf-8"?>
<!--루틴시작전 준비단계 리스트 아이템-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:id="@+id/item_workready_workpart_part_tv"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/item_workready_workpart_time_title_tv"
    android:text="운동부분">
</TextView>
<!--    운동부분-->
    <TextView
        android:id="@+id/item_workready_workpart_time_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_workready_workpart_vol_title_tv"
        app:layout_constraintLeft_toRightOf="@id/item_workready_workpart_part_tv"
        app:layout_constraintRight_toLeftOf="@id/item_workready_workpart_time_tv"
        android:text="운동시간">
    </TextView>
<!--    운동시간-->
    <TextView
        android:id="@+id/item_workready_workpart_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/item_workready_workpart_time_title_tv"
        app:layout_constraintRight_toLeftOf="@id/item_workready_workpart_detail_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_workready_workpart_vol_tv"
        android:text="00000000">
    </TextView>
<!--    운동시간 내용-->
    <TextView
        android:id="@+id/item_workready_workpart_vol_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_workready_workpart_time_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_workready_workpart_vol_tv"
        app:layout_constraintLeft_toRightOf="@id/item_workready_workpart_part_tv"
        android:text="총 볼륨">
    </TextView>
<!--    총볼륨-->
    <TextView
        android:id="@+id/item_workready_workpart_vol_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_workready_workpart_time_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_workready_workpart_vol_title_tv"
        app:layout_constraintRight_toLeftOf="@+id/item_workready_workpart_detail_iv"
        android:text="00000kg">
    </TextView>
<!--    총 볼륨 내용-->
    <ImageView
        android:id="@+id/item_workready_workpart_detail_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/item_workready_workpart_time_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/ic_launcher">
    </ImageView>
<!--    자세히보기-->
</androidx.constraintlayout.widget.ConstraintLayout>