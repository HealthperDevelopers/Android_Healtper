<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:overScrollMode="never"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/AutoCompleteTextView"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            >
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="전체"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/partchart_week_ct"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/AutoCompleteTextView"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:background="@color/gray"
            /><!--일단 데이터가 없어서 색칠만 해놓음-->
        <TextView
            android:id="@+id/partchart_week_worktime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 운동 시간"
            app:layout_constraintTop_toBottomOf="@id/partchart_week_ct"
            app:layout_constraintEnd_toStartOf="@id/partchart_week_workcount_tv"
            app:layout_constraintStart_toStartOf="@id/partchart_week_ct"
            android:layout_marginTop="50dp"
            android:layout_marginStart="50dp"/>
        <TextView
            android:id="@+id/partchart_week_workcount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 운동 횟수"
            app:layout_constraintTop_toBottomOf="@id/partchart_week_ct"
            app:layout_constraintStart_toEndOf="@id/partchart_week_worktime_tv"
            app:layout_constraintEnd_toEndOf="@id/partchart_week_ct"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="50dp"/>

        <TextView
            android:id="@+id/partchart_week_workvolume_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 볼륨"
            app:layout_constraintTop_toBottomOf="@id/partchart_week_workcount_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
