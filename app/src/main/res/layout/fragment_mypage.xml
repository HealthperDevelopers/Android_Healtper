    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/timer_background">
    <ImageView
        android:id="@+id/mypage_user_iv"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:scaleType="fitXY"
        android:src="@drawable/user_chuno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="174dp"
        />
    <TextView
        android:id="@+id/mypage_user_name_tv"
        android:text="user_name"
        android:textSize="25sp"
        style="@style/Text.uljiro.user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mypage_user_iv"
        app:layout_constraintEnd_toEndOf="@id/mypage_user_iv"
        app:layout_constraintStart_toStartOf="@id/mypage_user_iv"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/user_name_edit_bt"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@id/mypage_user_name_tv"
        app:layout_constraintTop_toTopOf="@id/mypage_user_name_tv"/>
    <TextView
        android:id="@+id/mypage_favorites_tv"
        android:text="부위별 즐겨찾기"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#7a7a7a"
        android:layout_width="197dp"
        android:layout_height="55dp"
        android:background="@drawable/mypage_fav_bt"
        app:layout_constraintTop_toBottomOf="@id/mypage_user_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="43dp"
        android:paddingStart="60dp"
        android:paddingEnd="25dp"/>

    <ImageView
        android:id="@+id/mypage_favorites_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/mypage_fav_star"
        app:layout_constraintTop_toTopOf="@id/mypage_favorites_tv"
        app:layout_constraintBottom_toBottomOf="@id/mypage_favorites_tv"
        app:layout_constraintStart_toStartOf="@id/mypage_favorites_tv"
        android:layout_marginStart="15dp"
        />


