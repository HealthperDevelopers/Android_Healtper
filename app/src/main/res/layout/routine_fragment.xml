<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/user_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/user"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user_name"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/user_iv"
        app:layout_constraintBottom_toBottomOf="@id/user_iv"
        app:layout_constraintStart_toEndOf="@id/user_iv"
        android:layout_marginStart="10dp"
        />
    <ImageView
        android:id="@+id/rectangle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/rectangle"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="15dp"
        />

        <TextView
            android:id="@+id/routine_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="루틴 이름"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/rectangle"
            android:layout_marginTop="40dp"
            android:layout_marginStart="40dp"
            />

        <EditText
            android:id="@+id/routine_name_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@id/routine_name_tv"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:id="@+id/choose_area_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="운동 부위 선택"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/routine_name_et"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            />

        <EditText
            android:id="@+id/choose_area_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@id/choose_area_tv"
            android:layout_marginTop="40dp"
            />
        <Button
            android:id="@+id/sholder_bt"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="어깨"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/back_bt"
            app:layout_constraintTop_toBottomOf="@id/choose_area_et"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            />

        <Button
            android:id="@+id/back_bt"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="등"
            app:layout_constraintStart_toEndOf="@id/sholder_bt"
            app:layout_constraintEnd_toStartOf="@id/abs_bt"
            app:layout_constraintTop_toBottomOf="@id/choose_area_et"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/abs_bt"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="복근"
            app:layout_constraintStart_toEndOf="@id/back_bt"
            app:layout_constraintEnd_toStartOf="@id/arm_bt"
            app:layout_constraintTop_toBottomOf="@id/choose_area_et"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/arm_bt"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="팔"
            app:layout_constraintStart_toEndOf="@id/abs_bt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/choose_area_et"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            />

        <Button
            android:id="@+id/leg_bt"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="하체"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/full_bt"
            app:layout_constraintTop_toBottomOf="@id/choose_area_et"
            android:layout_marginTop="70dp"
            android:layout_marginStart="40dp"
            />

        <Button
            android:id="@+id/full_bt"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="전신"
            app:layout_constraintStart_toEndOf="@id/leg_bt"
            app:layout_constraintEnd_toStartOf="@id/aerobic_bt"
            app:layout_constraintTop_toBottomOf="@id/choose_area_et"
            android:layout_marginTop="70dp"
            />

        <Button
            android:id="@+id/aerobic_bt"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="유산소"
            app:layout_constraintStart_toEndOf="@id/full_bt"
            app:layout_constraintTop_toBottomOf="@id/choose_area_et"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="40dp"
            />

        <Button
            android:id="@+id/chest_bt"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="가슴"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/hip_bt"
            app:layout_constraintTop_toBottomOf="@id/choose_area_et"
            android:layout_marginTop="120dp"
            android:layout_marginStart="40dp"
            />

        <Button
            android:id="@+id/hip_bt"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="엉덩이"
            app:layout_constraintStart_toEndOf="@id/chest_bt"
            app:layout_constraintTop_toBottomOf="@id/choose_area_et"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="40dp"
            />

        <Button
            android:id="@+id/routine_registration_bt"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="루틴 등록"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/choose_area_et"
            app:layout_constraintBottom_toBottomOf="@id/rectangle"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="250dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>