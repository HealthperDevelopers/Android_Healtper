<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/timer_background">
    <TextView
        android:id="@+id/detail_work_record_second_comm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/detail_work_record_second_part_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textSize="35sp"
        android:fontFamily="@font/bmeuljirottf"
        app:layout_goneMarginTop="100dp">
    </TextView>
    <ImageView
        android:id="@+id/detail_work_record_second_left_iv"
        android:layout_width="12.8dp"
        android:layout_height="12.8dp"
        app:layout_constraintTop_toTopOf="@id/detail_work_record_second_part_tv"
        app:layout_constraintBottom_toBottomOf="@id/detail_work_record_second_part_tv"
        app:layout_constraintRight_toLeftOf="@id/detail_work_record_second_part_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/item_arrow_left"
        app:layout_constraintHorizontal_chainStyle="packed">
    </ImageView>
    <TextView
        android:id="@+id/detail_work_record_second_part_background_tv"
        android:layout_width="90dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toTopOf="@id/detail_work_record_second_part_tv"
        app:layout_constraintLeft_toLeftOf="@id/detail_work_record_second_part_tv"
        app:layout_constraintRight_toRightOf="@id/detail_work_record_second_part_tv"
        app:layout_constraintBottom_toBottomOf="@id/detail_work_record_second_part_tv"
        android:background="@drawable/mypagefav_part_backrounding"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">
    </TextView>
    <TextView
        android:id="@+id/detail_work_record_second_part_tv"
        android:layout_width="90dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toBottomOf="@id/detail_work_record_second_comm_tv"
        app:layout_constraintBottom_toTopOf="@id/detail_work_record_second_work_sp"
        app:layout_constraintLeft_toRightOf="@id/detail_work_record_second_left_iv"
        app:layout_constraintRight_toLeftOf="@id/detail_work_record_second_right_iv"
        android:text="부위"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="13.8dp">
    </TextView>
    <ImageView
        android:id="@+id/detail_work_record_second_right_iv"
        android:layout_width="12.8dp"
        android:layout_height="12.8dp"
        app:layout_constraintTop_toTopOf="@id/detail_work_record_second_part_tv"
        app:layout_constraintBottom_toBottomOf="@id/detail_work_record_second_part_tv"
        app:layout_constraintLeft_toRightOf="@id/detail_work_record_second_part_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/item_arrow_right">
    </ImageView>



    <Spinner
        android:id="@+id/detail_work_record_second_work_sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_work_record_second_part_tv"
        app:layout_constraintBottom_toTopOf="@id/detail_work_record_second_info_cl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/item_spinner_background"
        android:layout_marginHorizontal="66dp">
    </Spinner>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_work_record_second_info_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_work_record_second_work_sp"
        app:layout_constraintBottom_toTopOf="@id/detail_work_record_second_detail_cl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="61dp">
    <TextView
        android:id="@+id/detail_work_record_second_time_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/detail_work_record_second_vol_title_tv"
        app:layout_constraintRight_toLeftOf="@id/detail_work_record_second_time_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="진행 시간"
        android:fontFamily="@font/myanmar_text_bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="10dp">
    </TextView>
    <TextView
        android:id="@+id/detail_work_record_second_time_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/detail_work_record_second_time_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/detail_work_record_second_time_title_tv"
        app:layout_constraintLeft_toRightOf="@id/detail_work_record_second_time_title_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/bahnschrift"
        android:textSize="28sp"
        android:textAlignment="center"
        android:background="@drawable/item_boarder"
        android:elevation="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="10dp">
    </TextView>
    <TextView
        android:id="@+id/detail_work_record_second_vol_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_work_record_second_time_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/detail_work_record_second_vol_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="볼        륨"
        android:gravity="center"
        android:fontFamily="@font/myanmar_text_bold"
        android:textSize="18sp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="10dp">
    </TextView>
    <TextView
        android:id="@+id/detail_work_record_second_vol_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/detail_work_record_second_vol_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/detail_work_record_second_vol_title_tv"
        app:layout_constraintLeft_toRightOf="@id/detail_work_record_second_vol_title_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/bahnschrift"
        android:textSize="28sp"
        android:textAlignment="center"
        android:background="@drawable/item_boarder"
        android:elevation="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="10dp">
    </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_work_record_second_detail_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_work_record_second_info_cl"
        app:layout_constraintBottom_toTopOf="@id/detail_work_record_second_back_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="63dp"
        android:background="@drawable/item_detail_second_rv_background"
        android:elevation="1dp">
    <TextView
        android:id="@+id/detail_work_record_second_detail_set_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="세트"
        android:gravity="center"
        android:textSize="15sp"
        android:fontFamily="@font/myanmar_text_regular"
        app:layout_constraintBottom_toTopOf="@id/detail_work_record_second_work_detail_rv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/detail_work_record_second_detail_vol_tv"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>
        <TextView
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:background="#cecece"
            app:layout_constraintLeft_toRightOf="@id/detail_work_record_second_detail_set_tv"
            app:layout_constraintRight_toLeftOf="@id/detail_work_record_second_detail_vol_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/detail_work_record_second_work_detail_rv">
        </TextView>
    <TextView
        android:id="@+id/detail_work_record_second_detail_vol_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="무게"
        android:gravity="center"
        android:textSize="15sp"
        android:fontFamily="@font/myanmar_text_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/detail_work_record_second_work_detail_rv"
        app:layout_constraintLeft_toRightOf="@id/detail_work_record_second_detail_set_tv"
        app:layout_constraintRight_toLeftOf="@id/detail_work_record_second_detail_count_tv">
    </TextView>
        <TextView
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:background="#cecece"
            app:layout_constraintLeft_toRightOf="@id/detail_work_record_second_detail_vol_tv"
            app:layout_constraintRight_toLeftOf="@id/detail_work_record_second_detail_count_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/detail_work_record_second_work_detail_rv">
        </TextView>
    <TextView
        android:id="@+id/detail_work_record_second_detail_count_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/detail_work_record_second_work_detail_rv"
        app:layout_constraintLeft_toRightOf="@id/detail_work_record_second_detail_vol_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="횟수"
        android:gravity="center"
        android:textSize="15sp"
        android:fontFamily="@font/myanmar_text_regular">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/detail_work_record_second_work_detail_rv"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_work_record_second_detail_set_tv"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:elevation="1dp"
        tools:listitem="@layout/item_detail_second"
        android:background="@color/white">
    </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/detail_work_record_second_back_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_work_record_second_detail_cl"
        android:elevation="1dp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="43dp"
        android:text = "이전으로"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@drawable/item_boarder">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>