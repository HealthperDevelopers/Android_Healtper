<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/detail_work_record_second_part_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/detail_work_record_second_work_cl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_weight="2">
    </androidx.recyclerview.widget.RecyclerView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_work_record_second_work_cl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/detail_work_record_second_part_rv"
        app:layout_constraintBottom_toTopOf="@id/detail_work_record_second_back_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_weight="7">
        <TextView
            android:id="@+id/detail_work_record_second_part_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/detail_work_record_second_work_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        </TextView>

        <TextView
            android:id="@+id/detail_work_record_second_work_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/detail_work_record_second_part_tv"
            app:layout_constraintBottom_toTopOf="@id/detail_work_record_second_work_time_title_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="운동종류">
        </TextView>


        <TextView
            android:id="@+id/detail_work_record_second_work_time_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/detail_work_record_second_work_tv"
            app:layout_constraintBottom_toTopOf="@id/item_main_detail_total_vol_title_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/detail_work_record_second_work_time_tv"
            android:text="진행시간">
        </TextView>
        <TextView
            android:id="@+id/detail_work_record_second_work_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/detail_work_record_second_work_time_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/detail_work_record_second_work_time_title_tv"
            app:layout_constraintLeft_toRightOf="@id/detail_work_record_second_work_time_title_tv"
            app:layout_constraintRight_toRightOf="parent">
        </TextView>


        <TextView
            android:id="@+id/item_main_detail_total_vol_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/detail_work_record_second_work_time_title_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/item_main_detail_total_vol_tv"
            android:text="볼륨">
        </TextView>
        <TextView
            android:id="@+id/item_main_detail_total_vol_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/item_main_detail_total_vol_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/item_main_detail_total_vol_title_tv"
            app:layout_constraintLeft_toRightOf="@id/item_main_detail_total_vol_title_tv"
            app:layout_constraintRight_toRightOf="parent">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/detail_work_record_second_back_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/detail_work_record_second_work_cl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>