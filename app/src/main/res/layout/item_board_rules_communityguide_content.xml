<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_board_rules_content_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/board_rule_title"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/item_board_rules_content_content_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_board_rules_content_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/board_rule_content"
        android:textSize="13sp"
        android:textColor="@color/gray"
        android:includeFontPadding="false"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/item_board_rules_content_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>