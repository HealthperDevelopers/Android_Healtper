<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/timer_background">

    <ImageView
        android:id="@+id/login_logo_iv"
        android:layout_width="220dp"
        android:layout_height="159dp"
        android:src="@drawable/splash_logo"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="410dp"
        android:scaleType="fitXY"
        android:layout_marginTop="230dp"/>

    <TextView
        android:id="@+id/login_auto_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="auto login : no"
        app:layout_constraintStart_toStartOf="@id/kakao_login_tv"
        app:layout_constraintBottom_toTopOf="@id/kakao_login_tv"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/login_subtitle_tv"
        android:layout_width="210dp"
        android:layout_height="15dp"
        android:src="@drawable/login_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/login_logo_iv"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="4dp"
        />

    <ImageView
        android:id="@+id/login_name_tv"
        android:layout_width="46dp"
        android:layout_height="26dp"
        android:src="@drawable/login_app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_subtitle_tv"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="166dp"
        android:layout_marginStart="166dp"
        />

    <ImageView
        android:id="@+id/kakao_login_tv"
        android:layout_width="220dp"
        android:layout_height="71dp"
        android:src="@drawable/kakao_login_large_narrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_name_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="122dp"
        android:layout_marginBottom="185dp"
        />

