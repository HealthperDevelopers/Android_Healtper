<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_rest_background">
    <TextView
        android:id="@+id/rest_rest_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쉬는 시간을 설정해주세요."
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/rest_minutes_et"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="01"
        android:textSize="30sp"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="@id/rest_colon_tv"
        app:layout_constraintBottom_toBottomOf="@id/rest_colon_tv"
        app:layout_constraintEnd_toStartOf="@id/rest_colon_tv"
        android:layout_marginStart="50dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/rest_colon_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/rest_rest_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/rest_mills_et"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="00"
        android:textSize="30sp"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="@id/rest_colon_tv"
        app:layout_constraintBottom_toBottomOf="@id/rest_colon_tv"
        app:layout_constraintStart_toEndOf="@id/rest_colon_tv"
        android:layout_marginEnd="50dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/rest_done_bt"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="수정 완료"
        android:textSize="12dp"
        android:gravity="center"
        android:background="@drawable/dialog_rest_done_bt"
        app:layout_constraintTop_toBottomOf="@id/rest_colon_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>