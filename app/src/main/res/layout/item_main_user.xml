<?xml version="1.0" encoding="utf-8"?>
<!--메인상단의 유저 칸-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="27dp"
    android:layout_marginTop="40dp">
    <ImageView
        android:id="@+id/item_main_user_setting_iv"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="@id/item_main_user_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_main_user_name_tv"
        app:layout_constraintRight_toRightOf="parent">
    </ImageView>
    <!--    설정버튼-->
    <androidx.cardview.widget.CardView
        android:id="@+id/item_main_user_profile_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_main_user_name_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="200dp">
        <ImageView
        android:id="@+id/item_main_user_profile_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher">
        </ImageView>
    </androidx.cardview.widget.CardView>
<!--    프로필 사진-->


    <TextView
        android:id="@+id/item_main_user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        app:layout_constraintTop_toTopOf="@id/item_main_user_profile_cv"
        app:layout_constraintLeft_toRightOf="@+id/item_main_user_profile_cv"
        app:layout_constraintBottom_toBottomOf="@id/item_main_user_profile_cv"
        app:flow_verticalAlign="center"
        android:fontFamily="@font/bmeuljirottf"
        android:textSize="15sp"
        android:layout_marginLeft="15dp">
    </TextView>
<!--    이름-->


</androidx.constraintlayout.widget.ConstraintLayout>