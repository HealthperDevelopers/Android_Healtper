<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/item_detail_second_set_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="세트"
        android:gravity="center"
        android:textSize="12sp"
        android:fontFamily="@font/myanmar_text_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_detail_second_vol_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/item_detail_second_item_boarder">
    </TextView>
    <TextView
        android:id="@+id/item_detail_second_vol_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="무게"
        android:gravity="center"
        android:textSize="12sp"
        android:fontFamily="@font/myanmar_text_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_detail_second_set_tv"
        app:layout_constraintRight_toLeftOf="@id/item_detail_second_count_tv"
        android:background="@drawable/item_detail_second_item_boarder">
    </TextView>
    <TextView
        android:id="@+id/item_detail_second_count_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_detail_second_vol_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:text="횟수"
        android:gravity="center"
        android:textSize="12sp"
        android:fontFamily="@font/myanmar_text_bold"
        android:background="@drawable/item_detail_second_item_boarder">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>