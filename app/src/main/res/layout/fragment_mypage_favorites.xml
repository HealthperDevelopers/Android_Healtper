<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:orientation="vertical"
    android:overScrollMode="never"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/timer_background">


    <ImageView
        android:id="@+id/mypagefav_user_iv"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:src="@drawable/user"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="42dp"
        />
    <TextView
        android:id="@+id/mypagefav_user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user_name"
        android:textSize="15sp"
        style="@style/Text.uljiro.user"
        app:layout_constraintTop_toTopOf="@id/mypagefav_user_iv"
        app:layout_constraintBottom_toBottomOf="@id/mypagefav_user_iv"
        app:layout_constraintStart_toEndOf="@id/mypagefav_user_iv"
        android:layout_marginStart="15dp"
        />

    <TextView
        android:id="@+id/mypagefav_part_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부위별 즐겨찾기"
        android:textSize="30dp"
        style="@style/Text.uljiro.user"
        app:layout_constraintTop_toBottomOf="@id/mypagefav_user_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mypagefav_part_list_rv"
        android:layout_marginTop="50dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mypagefav_part_list_rv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/mypagefav_part_title_tv"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@id/mypagefav_work_list_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_mypage_fav_part">
    </androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/mypagefav_work_list_background"
        android:layout_width="300dp"
        android:layout_height="326dp"
        app:layout_constraintTop_toBottomOf="@id/mypagefav_part_list_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/workdetail_work_list_background"/>

    <ImageView
        android:layout_width="23dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/scrollbar_track"
        app:layout_constraintTop_toTopOf="@id/mypagefav_work_list_rv"
        app:layout_constraintBottom_toBottomOf="@id/mypagefav_work_list_rv"
        app:layout_constraintEnd_toEndOf="@id/mypagefav_work_list_background"
        android:layout_marginEnd="21dp"/>

    <TextView
        android:id="@+id/mypagefav_select_part_tv"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/part_backrounding"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/mypagefav_work_list_background"
        app:layout_constraintBottom_toTopOf="@id/mypagefav_add_work_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        android:text="part">
    </TextView>

    <ImageView
        android:id="@+id/mypagefav_add_work_iv"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/mypagefav_select_part_tv"
        app:layout_constraintBottom_toTopOf="@id/mypagefav_work_list_rv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/mypagefav_plus_bt"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mypagefav_work_list_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/mypagefav_work_list_background"
        android:layout_marginTop="125dp"
        app:layout_constraintBottom_toBottomOf="@id/mypagefav_work_list_background"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="@id/mypagefav_work_list_background"
        app:layout_constraintRight_toRightOf="@id/mypagefav_work_list_background"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="30dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/item_mypage_fav_work"
        android:scrollbars="vertical"
        android:scrollbarFadeDuration="0"
        android:fadeScrollbars="false"
        android:scrollbarStyle="outsideInset"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@drawable/scroll_thumb">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>
