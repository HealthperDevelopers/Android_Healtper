<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main_layout"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/set_timer_total_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 운동 시간"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/set_time_total_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="20sp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/rectangle">
        <Button
            android:id="@+id/set_timer_pick_bt"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/set_timer_work_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="운동 종류"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/set_timer_pick_bt"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/rectangle"
            android:gravity="center"
            />
        <Button
            android:id="@+id/set_timer_workstart_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운동 시작"
            app:layout_constraintTop_toBottomOf="@id/set_timer_work_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/set_timer_table_tv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="16sp"
            android:background="@drawable/table"
            app:layout_constraintTop_toBottomOf="@id/set_timer_workstart_bt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"/>
        <ImageView
            android:id="@+id/set_timer_table_bottom_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"/>

        <View
            android:id="@+id/set_timer_fir_column"
            android:layout_width="1dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="@id/set_timer_table_tv"
            app:layout_constraintBottom_toBottomOf="@id/set_timer_table_tv"
            app:layout_constraintStart_toStartOf="@id/set_timer_table_tv"
            app:layout_constraintEnd_toStartOf="@id/set_timer_sec_column"/>
        <View
            android:id="@+id/set_timer_sec_column"
            android:layout_width="1dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="@id/set_timer_table_tv"
            app:layout_constraintBottom_toBottomOf="@id/set_timer_table_tv"
            app:layout_constraintStart_toEndOf="@id/set_timer_fir_column"
            app:layout_constraintEnd_toEndOf="@id/set_timer_table_tv"/>

        <TextView
            android:id="@+id/set_timer_table_set_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세트"
            app:layout_constraintTop_toTopOf="@id/set_timer_table_tv"
            app:layout_constraintStart_toStartOf="@id/set_timer_table_tv"
            app:layout_constraintEnd_toEndOf="@id/set_timer_fir_column"
            app:layout_constraintBottom_toTopOf="@id/set_timer_table_set_et"
            />

        <TextView
            android:id="@+id/set_timer_table_weight_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="무게"
            app:layout_constraintTop_toTopOf="@id/set_timer_table_tv"
            app:layout_constraintStart_toStartOf="@id/set_timer_fir_column"
            app:layout_constraintEnd_toEndOf="@id/set_timer_sec_column"
            app:layout_constraintBottom_toTopOf="@id/set_timer_table_weight_et"
            />

        <TextView
            android:id="@+id/set_timer_table_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="횟수"
            app:layout_constraintTop_toTopOf="@id/set_timer_table_tv"
            app:layout_constraintStart_toStartOf="@id/set_timer_sec_column"
            app:layout_constraintEnd_toEndOf="@id/set_timer_table_tv"
            app:layout_constraintBottom_toTopOf="@id/set_timer_table_count_et"
            />

        <TextView
            android:id="@+id/set_timer_table_set_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/set_timer_table_tv"
            app:layout_constraintStart_toStartOf="@id/set_timer_table_tv"
            app:layout_constraintEnd_toEndOf="@id/set_timer_fir_column"
            app:layout_constraintTop_toBottomOf="@id/set_timer_table_set_tv"
            android:background="@android:color/transparent"
            />

        <EditText
            android:id="@+id/set_timer_table_weight_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="무게"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="@id/set_timer_fir_column"
            app:layout_constraintEnd_toEndOf="@id/set_timer_sec_column"
            app:layout_constraintBottom_toBottomOf="@id/set_timer_table_tv"
            app:layout_constraintTop_toBottomOf="@id/set_timer_table_weight_tv"
            android:background="@android:color/transparent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kg"
            app:layout_constraintTop_toTopOf="@id/set_timer_table_weight_et"
            app:layout_constraintBottom_toBottomOf="@id/set_timer_table_weight_et"
            app:layout_constraintStart_toEndOf="@id/set_timer_table_weight_et"
            android:layout_marginStart="5dp"
            />

        <EditText
            android:id="@+id/set_timer_table_count_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="횟수"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@id/set_timer_table_tv"
            app:layout_constraintStart_toStartOf="@id/set_timer_sec_column"
            app:layout_constraintEnd_toEndOf="@id/set_timer_table_tv"
            app:layout_constraintTop_toBottomOf="@id/set_timer_table_count_tv"
            android:background="@android:color/transparent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회"
            app:layout_constraintTop_toTopOf="@id/set_timer_table_count_et"
            app:layout_constraintBottom_toBottomOf="@id/set_timer_table_count_et"
            app:layout_constraintStart_toEndOf="@id/set_timer_table_count_et"
            android:layout_marginStart="5dp"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/set_timer_back_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이전으로"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>
</LinearLayout>