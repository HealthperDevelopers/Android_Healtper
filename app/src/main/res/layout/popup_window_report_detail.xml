<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/popup_window_report_detail_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="유출/사칭/사기"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/popup_window_report_detail_content_reason_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="게시물 무단 유출, 타인의 개인정보 유출, 관리자 사칭 등 타인의 권리를 침해 하거나 관련법에 위배되는 게시물"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/popup_window_report_detail_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/popup_window_report_detail_content_warning_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="신고는 반대의견을 나타내는 기능이 아닙니다. 신고 사유에 맞지 않는 신고를 했을 경우, 해당 신고는 처리되지 않습니다."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/popup_window_report_detail_content_reason_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/popup_window_report_detail_cancelBtn_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="취소"
        android:textSize="16sp"
        android:textColor="@color/red"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/popup_window_report_detail_content_warning_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/popup_window_report_detail_reportBtn_tv" />

    <TextView
        android:id="@+id/popup_window_report_detail_reportBtn_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="신고"
        android:textSize="16sp"
        android:textColor="@color/red"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/popup_window_report_detail_content_warning_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/popup_window_report_detail_cancelBtn_tv"
        app:layout_constraintEnd_toEndOf="parent" />






</androidx.constraintlayout.widget.ConstraintLayout>