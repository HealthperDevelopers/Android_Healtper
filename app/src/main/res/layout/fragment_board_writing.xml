<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/board_writing_cancel_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin = "20dp"
        />

    <TextView
        android:id="@+id/board_writing_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="글 쓰기"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/board_writing_cancel_iv"
        app:layout_constraintTop_toTopOf="@id/board_writing_cancel_iv" />

    <Button
        android:id="@+id/board_myboard_writing_posting_btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="게시"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/board_writing_freepost_btn_iv"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="자유"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/board_writing_tv" />

    <Button
        android:id="@+id/board_writing_questionpost_btn_iv"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="질문"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/board_writing_freepost_btn_iv"
        app:layout_constraintTop_toTopOf="@+id/board_writing_freepost_btn_iv" />

    <EditText
        android:id="@+id/board_writing_title_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="제목"
        android:textStyle="bold"
        android:textColorHint="@color/black"
        android:inputType="textLongMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/board_writing_questionpost_btn_iv" />


    <EditText
        android:id="@+id/board_writing_content_et"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="@id/board_writing_title_et"
        app:layout_constraintTop_toBottomOf="@id/board_writing_title_et"
        android:layout_weight="1"
        android:hint="내용을 입력하세요."
        android:background="@null"
         />

    <Button
        android:id="@+id/board_writing_communityrule_btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="커뮤니티 이용규칙"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/board_writing_content_et"

        />





</androidx.constraintlayout.widget.ConstraintLayout>

