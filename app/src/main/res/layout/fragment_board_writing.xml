<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/timer_background">

    <TextView
        android:id="@+id/board_writing_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginStart="-5dp"
        android:background="@drawable/board_writing_background"
        />

    <TextView
        android:id="@+id/board_writing_cancel_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/dialog_edit_work_close"
        android:backgroundTint="#7a7a7a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart = "30dp"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/board_writing_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="글 쓰기"
        style="@style/Text.uljiro.comment"
        android:textColor="#7a7a7a"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/board_writing_cancel_iv"
        app:layout_constraintTop_toTopOf="@id/board_writing_cancel_iv" />



    <ImageView
        android:id="@+id/board_myboard_writing_posting_btn_iv"
        android:layout_width="79dp"
        android:layout_height="33dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/board_writing_post_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/board_writing_freepost_btn_iv"
        android:layout_width="53dp"
        android:layout_height="27dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/board_writing_freebt"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/board_writing_background" />

    <ImageView
        android:id="@+id/board_writing_freepost_redbtn_iv"
        android:layout_width="53dp"
        android:layout_height="27dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/board_writing_free_redbt"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/board_writing_background" />

    <ImageView
        android:id="@+id/board_writing_questionpost_btn_iv"
        android:layout_width="53dp"
        android:layout_height="27dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/board_writing_questionbt"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@id/board_writing_freepost_btn_iv"
        app:layout_constraintTop_toTopOf="@+id/board_writing_background" />
    <ImageView
        android:id="@+id/board_writing_questionpost_redbtn_iv"
        android:layout_width="53dp"
        android:layout_height="27dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/board_writing_questionredbt"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/board_writing_freepost_btn_iv"
        app:layout_constraintTop_toTopOf="@+id/board_writing_background" />

    <EditText
        android:id="@+id/board_writing_title_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="제목"
        android:textSize="28sp"
        android:textColorHint="@color/black"
        android:inputType="textLongMessage"
        style="@style/Text.bmjua.total"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/board_writing_questionpost_btn_iv" />


    <EditText
        android:id="@+id/board_writing_content_et"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="@id/board_writing_title_et"
        app:layout_constraintTop_toBottomOf="@id/board_writing_title_et"
        android:layout_weight="1"
        android:hint="내용을 입력하세요."
        android:background="@null"
         />

    <ImageView
        android:id="@+id/board_writing_communityrule_btn_iv"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="66dp"
        android:src="@drawable/board_writing_rule"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />





</androidx.constraintlayout.widget.ConstraintLayout>

