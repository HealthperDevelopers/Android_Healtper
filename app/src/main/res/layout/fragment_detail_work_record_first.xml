<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/timer_background">
    <TextView
        android:id="@+id/detail_work_record_first_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/detail_work_record_first_total_time_cl"
        android:text="title"
        android:gravity="center"
        android:textSize="35sp"
        android:fontFamily="@font/bmeuljirottf">
    </TextView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_work_record_first_total_time_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_work_record_first_title_tv"
        app:layout_constraintBottom_toTopOf="@id/detail_work_record_first_total_vol_cl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="44dp">
    <TextView
        android:id="@+id/detail_work_record_first_total_time_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/detail_work_record_first_total_time_tv"
        android:text="총 운동 시간"
        android:gravity="center"
        android:textSize="15sp"
        android:fontFamily="@font/vivaldi"
        android:textColor="#767676"
        android:background="@drawable/item_detail_first_item_up_background"
        android:padding="8dp"
        android:elevation="2dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="4dp">
    </TextView>
    <TextView
        android:id="@+id/detail_work_record_first_total_time_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_work_record_first_total_time_title_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp"
        android:fontFamily="@font/bahnschrift"
        android:gravity="center"
        android:textSize="28sp"
        android:background="@drawable/item_detail_first_item_down_background"
        android:elevation="2dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="4dp">
    </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_work_record_first_total_vol_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_work_record_first_total_time_cl"
        app:layout_constraintBottom_toTopOf="@id/detail_work_record_first_list_rv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="44dp"
        android:elevation="1dp">
    <TextView
        android:id="@+id/detail_work_record_first_total_vol_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/detail_work_record_first_total_vol_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/item_detail_first_item_up_background"
        android:text="총 볼륨"
        android:gravity="center"
        android:textSize="15sp"
        android:fontFamily="@font/vivaldi"
        android:textColor="#767676"
        android:padding="8dp"
        android:elevation="2dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="4dp">
    </TextView>
    <TextView
        android:id="@+id/detail_work_record_first_total_vol_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_work_record_first_total_vol_title_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="16dp"
        android:fontFamily="@font/bahnschrift"
        android:gravity="center"
        android:textSize="28sp"
        android:background="@drawable/item_detail_first_item_down_background"
        android:elevation="2dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="4dp">
    </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/detail_work_record_first_list_rv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/detail_work_record_first_total_vol_cl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/item_workready_workpart">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>