<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <layer-list>
        <item>
            <shape android:layout_width="match_parent" android:shape="rectangle">
                <solid android:color="@color/white" />
                <corners android:radius="10dp" />
                <padding
                    android:bottom="5dp"
                    android:top="5dp"
                    android:right="15dp" />
                <stroke android:width="0.5dp" android:color="@color/black"></stroke>
            </shape>
        </item>
        <item
            android:drawable="@drawable/item_spinner_background_arrow"
            android:gravity="center|end"
            android:width="15.2dp"
            android:height="15.2dp">
        </item>
    </layer-list>
</item>
</selector>